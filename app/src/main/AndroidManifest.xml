<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.hankki.fooddeal">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ui.register.DatePickerActivity" android:theme="@android:style/Theme.DeviceDefault.Light.Dialog"></activity>
        <activity android:name=".ui.register.PhoneAuthRegActivity" />
        <activity android:name=".ui.SplashActivity"></activity>
        <activity android:name=".ui.IntroActivity" />
        <activity android:name=".ui.login.LoginActivity" />
        <activity android:name=".ui.register.RegisterActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.register.CommonRegisterActivity" />
        <activity android:name=".ui.register.location.CurrentLocationReg" />
        <activity android:name=".ui.register.location.LocationMainActivity" />
        <activity android:name=".ui.register.location.WriteLocationReg" />
        <activity android:name=".ui.register.MarketRegActivity" />
        <activity android:name=".ui.register.UserProfileRegActivity" />
        <activity android:name=".ui.MainActivity" />
    </application>
    <uses-permission android:name="android.permission.INTERNET" />

    <uses-permission android:name="android.permission.SEND_SMS" />

</manifest>