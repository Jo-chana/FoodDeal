<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/comment_item"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingTop="15dp">

    <ImageView
        android:id="@+id/iv_comment_user_profile"
        android:background="#FF00CC"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />
    <TextView
        android:id="@+id/tv_comment_user_name"
        android:text="아이디"
        android:textSize="15sp"
        android:textColor="@color/original_black"
        android:textStyle="bold"
        android:lines="1"
        android:maxLength="10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/iv_comment_user_profile"
        android:layout_marginLeft="10dp"
        app:layout_constraintTop_toTopOf="@id/iv_comment_user_profile"
        app:layout_constraintBottom_toBottomOf="@id/iv_comment_user_profile"/>

    <TextView
        android:id="@+id/tv_comment_message"
        android:text="댓글내용"
        android:textSize="15sp"
        android:textColor="@color/original_black"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/tv_comment_user_name"
        app:layout_constraintTop_toTopOf="@id/tv_comment_user_name"
        app:layout_constraintHorizontal_bias="0"
        android:layout_marginLeft="10dp"/>

    <TextView
        android:id="@+id/tv_comment_time"
        android:text="5시간"
        android:textColor="#c4c4c4"
        android:textSize="14sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_comment_message"
        app:layout_constraintLeft_toLeftOf="@id/tv_comment_user_name"
        android:layout_marginTop="3dp"/>

    <TextView
        android:id="@+id/tv_reply"
        android:text="답글달기                                        "
        android:textStyle="bold"
        android:textSize="15sp"
        android:textColor="#c4c4c4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/tv_comment_time"
        app:layout_constraintLeft_toRightOf="@id/tv_comment_time"
        android:layout_marginLeft="10dp"/>

    <TextView
        android:id="@+id/tv_btn_reply"
        android:layout_width="55dp"
        android:layout_height="20dp"
        app:layout_constraintTop_toTopOf="@id/tv_reply"
        app:layout_constraintBottom_toBottomOf="@id/tv_reply"
        app:layout_constraintLeft_toLeftOf="@id/tv_reply"/>

    <TextView
        android:id="@+id/tv_btn_delete"
        android:text="삭제"
        android:textStyle="bold"
        android:textSize="15sp"
        android:textColor="#c4c4c4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/tv_btn_reply"
        app:layout_constraintBottom_toBottomOf="@id/tv_btn_reply"
        app:layout_constraintLeft_toRightOf="@id/tv_btn_reply"
        android:layout_marginLeft="15dp"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rl_comment_comment"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@id/tv_comment_user_name"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_btn_reply"/>


</androidx.constraintlayout.widget.ConstraintLayout>