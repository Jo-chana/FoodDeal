<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/view_list_community"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="10dp"
    android:paddingRight="10dp">

    <TextView
        android:id="@+id/tv_username"
        android:text="익명"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@id/tv_userlocation"
        android:text="지역정보 없음"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:text="글 제목"
        android:textSize="15dp"
        android:lines="1"
        android:id="@+id/tv_title"
        android:layout_below="@id/tv_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_userlocation"
        android:layout_alignParentRight="true"/>
    <TextView
        android:id="@+id/tv_post"
        android:paddingTop="10dp"
        android:text="글 내용"
        android:lines="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/tv_title"
        android:layout_toLeftOf="@id/btn_item"/>
    <Button
        android:id="@+id/btn_item"
        android:text="수정"
        android:textSize="10sp"
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:paddingTop="10dp"
        android:layout_below="@id/tv_title"
        android:layout_alignParentEnd="true"
        android:paddingBottom="10dp"/>
    <View
        android:layout_below="@id/btn_item"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#E881A7"/>

</RelativeLayout>